<div class="navbar navbar-expand-sm navbar-light navbar-lewagon container-navbar">

  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-igloo"></i>
  <% end %>
  <h1> <%= @cocktail.name %> </h1>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to  new_cocktail_dose_path(@cocktail), class: "nav-link" do %>
          <i class="fas fa-flask"></i>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="container-show-body">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  </div>
  <div class="container-show-full">

    <div class="container-show-headers">
      <h2>Description</h2>
    </div>

    <div class="all-show">

        <div class="dose-show">
          <% @cocktail.doses.each do |dose| %>
            <p> <%= dose.description %> </p>
          <% end %>
        </div>

        <div class="dose-show">
          <% @cocktail.doses.each do |dose| %>
              <div class="dose-show-ingredient">
                <div>
                <p> <%= dose.ingredient.name  %> </p>
                </div>
                <div>
                <%= link_to dose_path(dose), method: :delete do %>
                  <i class="fas fa-skull"></i>
                  </div>
                <% end %>
              </div>
          <% end %>
        </div>
    </div>

  </div>
</div>






