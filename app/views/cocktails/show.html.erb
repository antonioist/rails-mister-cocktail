<div class="container-cocktail-show-name">
  <h1> <%= @cocktail.name %> </h1>
</div>

<div class="container-show-body">
  <div class="card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  </div>
  <div class="container-show-full">

    <div class="container-show-headers">
      <h2>Description</h2>
    </div>

    <div class="all-show">



        <div class="dose-show">
          <% @cocktail.doses.each do |dose| %>
            <div class="d-flex justify-content-between">
              <p>  <%= dose.description %> <%= dose.ingredient.name  %></p>
              <%= link_to dose_path(dose), method: :delete do %>
                <i class="fas fa-skull"></i>
              <% end %>
            </div>
          <% end %>
        </div>
    </div>

  </div>
</div>


<footer>
  <div class="footer" id="footer-show">
    <div class="footer-links">
      <a href="#"></a>
      <a href="#"><%= link_to root_path, class: "navbar-brand" do %>
        <i class="fas fa-igloo"></i>
        <% end %></i>
      </a>
    </div>
  <div class="footer-copyright">
    <%= link_to  new_cocktail_dose_path(@cocktail), class: "navbar-brand" do %>
        <i class="fas fa-flask"></i>
    <% end %>
  </div>
</div></footer>









