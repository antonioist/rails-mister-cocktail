<div class="container-cocktail-show-name">
  <h1> <%= @cocktail.name.capitalize %> </h1>
</div>
<div class="container-show-body">
  <div class="card-category-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <div class="card-category-show-buttons">
      <div class="card-category-show-button1">
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "button" %>
      </div>
      <div class="card-category-show-button1">
        <%= link_to "Show doses", new_cocktail_dose_path(@cocktail), data: {toggle: "modal", target: "#exampleModalCenter"}, class: "button" %>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><%= @cocktail.name.capitalize %> Doses</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="all-show">
          <div class="dose-show">
            <% @cocktail.doses.each do |dose| %>
              <div class="d-flex justify-content-between">
                <p>  <%= dose.description %> <%= dose.ingredient.name.capitalize  %></p>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name.capitalize}?"} do %>
                  <i class="fas fa-skull"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="button" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>