<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://media-exp1.licdn.com/dms/image/C4E03AQGhebcyGscTrA/profile-displayphoto-shrink_200_200/0?e=1587600000&v=beta&t=YVZNMoMAS3Pg8Q698QLZILyrfKv_MqdYE-K9OzA1aZU", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://psychedelictimes.com/wp-content/uploads/2017/07/cocktail-594173_1280.jpg);">
  <div class="container">
    <h1>Psychedelic Cocktails</h1>
    <p>Change your life and learn how to create cocktails</p>
    <%= link_to new_cocktail_path do %>
      <i id="blender" class="fas fa-blender"></i>
    <% end %>
  </div>
</div>


<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media-cdn.tripadvisor.com/media/photo-s/13/b5/31/17/colorful-cocktails-with.jpg)">
      <%= link_to "", cocktail_path(cocktail), class: "card-link"%>
      <%=  cocktail.name %>
    </div>
  <% end %>
</div>

<footer>
  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  <div class="footer-copyright">
    Made by Antonio
  </div>
</div></footer>







